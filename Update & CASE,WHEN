SELECT * FROM [Countries]

SELECT [CountryName], [CurrencyCode], [CurrencyCode], 
         CASE 
		     WHEN [CurrencyCode] = 'EUR' THEN 'Euro'
			 ELSE 'Not Euro' 
			 END AS 'Not Euro'
FROM [Countries]
ORDER BY [CountryName] 
