CREATE TABLE [People](
[Id] INT PRIMARY KEY IDENTITY, 
[Name] NVARCHAR(200) NOT NULL, 
[Picture] VARBINARY(MAX),
CHECK (DATALENGTH([Picture]) <= 200000),
[Height] DECIMAL (3, 2),
[Weight] DECIMAL (5, 2),
[Gender] CHAR(1) NOT NULL,
CHECK ([Gender] = 'm' OR [Gender] = 'f'),
[Birthdate] DATE NOT NULL,
[Biography] NVARCHAR(MAX)
)
